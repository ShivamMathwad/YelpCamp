<%- include("../partials/header.ejs") %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Create a new Campground</h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">  <!--Goes to POST-campgrounds-->
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Name of Campground">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="price" placeholder="Price per night" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="image" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="description" placeholder="Description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>    
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>  <!--Goes to GET-campgrounds, as default is GET route-->
        </div>
    </div>
</div>

<%- include("../partials/footer.ejs") %>